<Page x:Class="WpfApp1.SingIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SingIn" Background="White">

    <Grid>
        <StackPanel>
        <Label Content="Login"></Label>
        <TextBox Name="tbLogin" Margin="5 10 250 0"></TextBox>
        <Label Content="Password"></Label>
        <TextBox Name="tbPassword" Margin="5 10 250 0"></TextBox>
            <Button Name="bSingIn" Content="Sing in" Click="bSingIn_Click" Margin="80 10 350 0"></Button>
        </StackPanel>
    </Grid>
</Page>
